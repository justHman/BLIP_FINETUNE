# ============== Setup data paths ===================
root: "dataset/custom_dataset"

train_image_dir: "dataset/custom_dataset/train_images"
train_ann: "dataset/custom_dataset/train_annotations.json"

# option
valid_image_dir: null
valid_ann: null

# option
test_image_dir: null
test_ann: null
# ============== Setup data paths ===================

# set pretrained as a file path or an url
pretrained: ''
tokenizer: "vinai/phobert-base"

# size of vit model; base or large
vit: 'base'
vit_grad_ckpt: False
vit_ckpt_layer: 0

# vit: 'large'
# vit_grad_ckpt: True
# vit_ckpt_layer: 5
# batch_size: 16
# init_lr: 2e-6

# optimizer
weight_decay: 0.05
min_lr: 1e-5
init_lr: 1e-3

# generation configs
max_length: 50  
min_length: 5
num_beams: 3
top_p: 0.9

# nucleus sampling if sample else beam search
sample: False

image_size: 384  
batch_size: 16
prompt: 'một bức ảnh về '
max_epoch: 20